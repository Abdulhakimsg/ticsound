<!DOCTYPE html>
<html>

<head>
		<title>Ticsound</title>
		<meta charset="utf-8">
		<%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<!-- Custom styles for this template -->
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">
		<link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
</head>

<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<%= link_to image_tag('/logo.png'), events_path, class: "navbar-brand" %>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarText">
						<ul class="navbar-nav mr-auto">
								<% if user_signed_in? %>
								<li class="nav-item active">
										<%= link_to 'My Events', user_path(id: current_user.id), class: "nav-link" %>
								</li>
								<li class="nav-item">
										<%= link_to 'New Event', new_event_url, class: "nav-link" %>
								</li>
								<li class="nav-item">
										<%= link_to 'Profile', edit_user_registration_url, class: "nav-link" %>
								</li>
								<li>
										<%= link_to 'Logout', destroy_user_session_url, method: :delete, class: "nav-link" %>
								</li>
								<% else %>
								<li class="nav-item">
										<%= link_to 'Signup', new_user_registration_url, class: "nav-link" %>
								</li>
								<li class="nav-item">
										<%= link_to 'Login', new_user_session_url, class: "nav-link" %>
								</li>
								<% end %>
						</ul>
				</div>
		</nav>
		<div class="container">
				<p class="notice">
						<%= notice %>
				</p>
				<p class="alert">
						<%= alert %>
				</p>
		</div>
		<%= yield %>
</body>
<!-- Footer -->
<footer>
		<div class="row">
				<div class="col-sm-12">
						<table width="100%">
								<tr>
										<td>
												<% if user_signed_in? %>
												<%= image_tag current_user.avatar_url, class: "avatar" %> Hello,
												<%= current_user.username %>
												<% else %>
												Welcome to Ticsound
												<% end %>
										</td>
										<td align="right">
												<strong><%= Date.today %></strong>
										</td>
								</tr>
						</table>
				</div>
		</div>
</footer>
<script>
$('#inputGroupFile01').on('change', function() {
		var fileName = $(this).val();
		$(this).next('.custom-file-label').html(fileName);
})
</script>

</html>