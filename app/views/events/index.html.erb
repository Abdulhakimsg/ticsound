<div class="todayEvent">
		<h1>Happening Today</h1>
</div>
<div id="demo" class="carousel slide" data-ride="carousel">
		<!-- Indicators -->
		<ul class="carousel-indicators">
				<li data-target="#demo" data-slide-to="0" class="active"></li>
				<li data-target="#demo" data-slide-to="1"></li>
				<li data-target="#demo" data-slide-to="2"></li>
		</ul>
		<!-- The slideshow -->
		<div class="carousel-inner">
				<div class="carousel-item active">
						<%= link_to event_path(id: @events.third) do%>
						<div class="pic">
								<%= image_tag @events.third.image_url %>
						</div>
						<div class="carousel-caption">
								<div>
										<h3 id="carousel_bg"><%= @events.third.name %></h3>
								</div>
								<div>
										<h6 id="carousel_bg"><%= @events.third.starttime.strftime("%l:%M%p") %></h6>
								</div>
								<p class="d-none d-md-inline" id="carousel_bg">
										<%= @events.third.description.first(180) %>
								</p>
						</div>
						<% end %>
				</div>
				<% @events.drop(3).take(2).each do |event| %>
				<div class="carousel-item">
						<%= link_to event_path(id: event.id) do%>
						<div class="pic">
								<%= image_tag event.image_url %>
						</div>
						<div class="carousel-caption">
								<div>
										<h3 id="carousel_bg"><%= event.name %></h3>
								</div>
								<div>
										<h6 id="carousel_bg"><%= @events.third.starttime.strftime("%l:%M%p") %></h6>
								</div>
								<p class="d-none d-md-inline" id="carousel_bg">
										<%= event.description.first(180) %>
								</p>
						</div>
				</div>
				<% end %>
				<% end %>
		</div>
		<!-- Left and right controls -->
		<a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
		<a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
</div>

<div class ="pickcontain">
	<h1>Search Dates</h1>

	<%= form_tag event_filter_path, method: :post ,id: :search do%>
		<%= select_date Date.today, prefix: :start_date %> to <%= select_date Date.tomorrow, prefix: :end_date %>
	<%= submit_tag 'Send' %>
	<% end %>

</div>

		<div class="allcontain">
				<div class="container">
						<div class="allHeadEvent">
								<h1>All Events</h1>
						</div>
						<div class="card-columns">
								<% @events.each do |event| %>
								<div class="card" id= "event<%= event.id %>">
										<img class="card-img-top" src="<%= event.image %>" alt="Card image cap">
										<div class="card-body">
												<h4 class="card-title"><%= event.name %></h4>
												<% if user_signed_in? %>
												<%# if Favourite.find_by(event_id: event.id, user_id: current_user.id) %>
												<% if event.find_favourite(current_user) %>
													<%= link_to delete_fav_path(id: event.find_favourite(current_user).id),  remote: true, method: :delete  do %>
												<i class="fas fa-heart fa-2x"></i>
													<% end %>
												<% else %>
														<%= link_to post_fav_path(id: event.id),remote: true, method: :post do %>
														<i class="far fa-heart fa-2x"></i><!--event.id-->
														<%end%>
													<%end%>
												<%end%>
												<h5 class="card-title">
													<%= event.venue %>
												</h5>
												<p class="card-text"></p>
												<p class="card-text">
														<%= event.starttime%>
												</p>
										</div>
								</div>
								<%end%>
						</div>
				</div>
		</div>

