<div class ="pickcontain">
	<h1>Search Dates</h1>

	<%= form_tag event_filter_path, method: :post ,id: :search do%>
		<%= select_date Date.today, prefix: :start_date %> to <%= select_date Date.tomorrow, prefix: :end_date %>
	<%= submit_tag 'Send' %>
	<% end %>
</div>

<ul class="list-unstyled">
 <% @events.each do |event| %>
  <li class="media">
        <img class="mr-3" src="<%= event.image %>" alt="Generic placeholder image">
        <div class="media-body">
        <h5 class="mt-0 mb-1 name"><%= event.name %></h5>
        </div>
  </li>
  <%end%>
</ul>




